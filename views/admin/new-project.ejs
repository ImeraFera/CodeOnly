<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../admin-partials/header.ejs') %>
        <link rel="stylesheet"
            type="text/css"
            href="/static/ckeditor/style.css">
        <link rel="stylesheet"
            href="https://cdn.ckeditor.com/ckeditor5/42.0.1/ckeditor5.css">
    </head>

    <body>
        <div class="container-xxl position-relative  d-flex p-0">

            <!-- Sidebar Start -->
            <%- include('../admin-partials/sidebar.ejs') %>
            <!-- Sidebar End -->

            <!-- Content Start -->
            <div class="content bg-dark">
                <!-- Navbar Start -->
                <%- include('../admin-partials/navbar.ejs') %>
                <!-- Navbar End -->
                <!-- Sale & Revenue Start -->
                <div class="container-fluid pt-4 px-4">

                    <form class="row g-0" method="post"
                        action="/admin-panel/new-project">

                        <div class="col-md-12  ">
                            <div
                                class="container p-4  border border-2  border-primary ">
                                <h6 class="mb-4 text-light">New Project
                                    Settings</h6>
                                <div class="form-floating mb-3">
                                    <input type="text"
                                        required
                                        class="form-control border border-primary bg-gray text-light"
                                        placeholder>
                                    <label
                                        class="text-light"
                                        for="floatingInput">Project
                                        Title</label>
                                </div>
                                <div class="form-floating mb-3 ">
                                    <input type="text"
                                        required
                                        class="form-control border border-primary bg-gray text-light"
                                        placeholder>
                                    <label
                                        class="text-light"
                                        for="floatingInput ">Keywords</label>
                                </div>
                                <div class="form-floating  mb-3">
                                    <select
                                        required
                                        class="form-select border border-primary bg-gray text-light"
                                        aria-label="Floating label select example">
                                        <option>Select Category</option>
                                        <option>React</option>
                                        <option>Java</option>
                                    </select>
                                    <label
                                        class="text-light"
                                        for="floatingSelect">Category</label>
                                </div>
                                <div class="form-floating mb-3 ">
                                    <input type="date" id="date" required
                                        class="form-control border border-primary bg-gray text-light"
                                        placeholder="Select a date">

                                    <label
                                        class="text-light"
                                        for="floatingInput ">Release Date
                                    </label>
                                </div>

                            </div>
                            <div
                                class="container p-4  border border-2  border-primary ">
                                <h6 class="mb-4 text-light"></h6>

                                <div class="form-floating mb-3">
                                    <div class="main-container col-md-12">
                                        <div
                                            class="editor-container editor-container_document-editor editor-container_include-minimap editor-container_include-style"
                                            id="editor-container">
                                            <div
                                                class="editor-container__menu-bar"
                                                id="editor-menu-bar"></div>
                                            <div
                                                class="editor-container__toolbar"
                                                id="editor-toolbar"></div>
                                            <div
                                                class="editor-container__minimap-wrapper">
                                                <div
                                                    class="editor-container__editor-wrapper">
                                                    <div
                                                        class="editor-container__editor"><div
                                                            id="editor"></div></div>
                                                </div>
                                                <div
                                                    class="editor-container__sidebar editor-container__sidebar_minimap"><div
                                                        id="editor-minimap"></div></div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!-- <div
                                    class="form-floating mb-3 text-center">
                                    <button type="submit"
                                        class="btn btn-primary  w-75">Add</button>

                                </div> -->
                            </div>
                        </div>

                    </form>
                </div>
                <!-- Sale & Revenue End -->

                <!-- Footer Start -->
                <%- include('../admin-partials/footer.ejs') %>

                <!-- Footer End -->
            </div>
            <a href="#"
                class="btn btn-lg btn-primary btn-lg-square back-to-top"><i
                    class="bi bi-arrow-up"></i></a>
        </div>

        <script type="importmap">
		{
			"imports": {
				"ckeditor5": "https://cdn.ckeditor.com/ckeditor5/42.0.1/ckeditor5.js",
				"ckeditor5/": "https://cdn.ckeditor.com/ckeditor5/42.0.1/"
			}
		}
		</script>
        <script type="module" src="/static/ckeditor/main.js"></script>
        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/chart/chart.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/easing/easing.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/waypoints/waypoints.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/owlcarousel/owl.carousel.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/tempusdominus/js/moment.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script
            src="/static/admin-panel-assets/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <script src="/static/admin-panel-assets/js/main.js"></script>

        <script>

            document.addEventListener('DOMContentLoaded', () => {
                const dateInput = document.getElementById('date'); 
                const today = new Date();
                const yyyy = today.getFullYear();
                const mm = String(today.getMonth() + 1).padStart(2, '0'); 
                const dd = String(today.getDate()).padStart(2, '0');
                const minDate = `${yyyy}-${mm}-${dd}`;
                dateInput.min = minDate;
                dateInput.value=minDate;

            });

        </script>

    </body>

</html>