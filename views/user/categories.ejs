<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/header.ejs') %>
        <link rel="stylesheet" href="/static/css/categories.css">
    </head>
    <body>
        <%- include('../partials/navbar.ejs') %>

        <div class="container-fluid text-light">
            <div class="row justify-content-center p-3 align-items-center">
                <div class="col-md-12">
                    <div class="card text-center custom-header-card">
                        <div class="card-header">
                            <h1>Category List</h1>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row p-5 align-items-center justify-content-center">

                <% for( let index = 0; index < categories.length; index++ ) { %>
                <%- include('../partials/category-card.ejs',categories[i]) %>
                <% } %>

            </div>

        </div>

        <%- include('../partials/footer.ejs') %>

        <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script type="module">
            import dontHover from './dontHover.js';
            dontHover();
        </script>
    </body>
</html>